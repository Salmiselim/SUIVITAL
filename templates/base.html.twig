<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Admin Dashboard{% endblock %}</title>
<style>
.scrollable-multiselect {
    height: 150px;  /* Set the height */
    overflow-y: auto; /* Enable vertical scrolling */
    display: block;
}
.scrollable-container {
    max-height: 200px;
    overflow-y: auto;
    border: 1px solid #ddd;
    padding: 10px;
}

.scrollable-checkbox-container {
    max-height: 200px;
    overflow-y: auto;  
    border: 1px solid #ddd;
    padding: 10px;
    width: 250px;
    background: #fff;
    border-radius: 5px;
}

.scrollable-checkbox-container div {
    display: flex;
    align-items: center;
    
}

.scrollable-checkbox-container input[type="checkbox"] {
    margin-right: 10px;
}


</style>
    <!-- Font Awesome (Required for AdminLTE icons) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

    <!-- Google Fonts (Optional) -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=swap">

    {% if template == 'template1' %}
        <!-- Argon Dashboard CSS -->
        <link rel="stylesheet" href="{{ asset('assets/templates/template1/css/argon-dashboard.css') }}">
    {% else %}
        <!-- AdminLTE CSS -->
        <link rel="stylesheet" href="{{ asset('assets/templates/template2/css/adminlte.min.css') }}">
    {% endif %}

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
        {% include 'partials/navbar.html.twig' %}
        {% include 'partials/sidebar.html.twig' %}

        <div class="content-wrapper">
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                        </div>
                    </div>
                </div>
            </div>

            <section class="content">
                <div class="container-fluid">
                    {% block content %}{% endblock %}
                </div>
            </section>
        </div>

    </div>

    <!-- jQuery (Required for Bootstrap & AdminLTE) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>


    <!-- Bootstrap Bundle (includes Popper.js) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    {% if template == 'template1' %}
    
        <script src="{{ asset('assets/templates/template1/js/argon-dashboard.js') }}"></script>
    {% else %}
        <script src="{{ asset('assets/templates/template2/js/adminlte.min.js') }}"></script>
                <script src="{{ asset('assets/templates/template2/js/adminlte.js') }}"></script>
<script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">


        
    {% endif %}


</body>
</html>
