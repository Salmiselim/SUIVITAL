{% extends 'base.html.twig' %}

{% block title %}Create Ordonnance{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mb-4">Create Ordonnance</h1>

        <div class="card p-4 shadow-sm">
            {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}

            <div class="form-group mb-3">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.medicaments, 'Medications', {'label_attr': {'class': 'form-label'}}) }}
                <div class="scrollable-checkbox-container border p-2 rounded">
                    {% for choice in form.medicaments %}
                        <div class="form-check">
                            {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
                            <label class="form-check-label" for="{{ choice.vars.id }}">{{ choice.vars.label }}</label>
                        </div>
                    {% endfor %}
                </div>
                {{ form_errors(form.medicaments) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(form.patient, 'Patient', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.patient, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.patient) }}
            </div>

            <div class="form-group text-center">
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary mt-3'}}) }}
            </div>
            
            {{ form_end(form) }}
        </div>

        <div class="text-center mt-3">
            <a href="{{ path('app_ordonnance_index') }}" class="btn btn-link">Back to list</a>
        </div>
    </div>
{% endblock %}