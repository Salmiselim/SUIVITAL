{% extends 'front.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
    <h2>Les services disponibles</h2>

      <div class="row">
        {% for service in services %}
            <div class="col-lg-4 col-md-4 col-sm-6 mb-4">
                <div class="card shadow-sm" style="min-height: 250px;">
                    <div class="card-header bg-primary text-white">
                        <h6 class="mb-0 text-center">{{ service.nom }}</h6>
                    </div>
                    <div class="card-body p-3">
                        <p class="text-muted text-sm">Spécialité: {{ service.specialite }}</p>
                        <p class="text-muted text-sm">Tarif: <strong>{{ service.tarif }} dt</strong></p>
                        {# <p class="text-muted text-xs">ID: {{ service.id }}</p> #}
                    </div>
                    <div class="card-footer text-center">
                        <a href="#" class="btn btn-primary btn-sm">prend rendezvous !</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-warning text-center" role="alert">
                    No records found
                </div>
            </div>
        {% endfor %}
    </div>
 
{% endblock %}
