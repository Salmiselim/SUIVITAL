{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réponse{% endblock %}

{% block content %}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card card-primary shadow-sm">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-comment-alt"></i> Créer une Nouvelle Réponse</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}

                        

                        <div class="form-group">
                            {{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.date, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                            {{ form_errors(form.date) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.objet, 'Objet', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.objet, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l’objet de la réponse'}}) }}
                            {{ form_errors(form.objet) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.commentaire, 'Commentaire', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Ajoutez un commentaire détaillé'}}) }}
                            {{ form_errors(form.commentaire) }}
                        </div>

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Enregistrer
                            </button>
                            <a href="{{ app.request.headers.get('referer') ?: path('app_admin_reponses_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
