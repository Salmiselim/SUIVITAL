{% extends 'base.html.twig' %}

{% block title %}{{ patient.name }}'s Ordonnances{% endblock %}

{% block content %}
    <div class="container">
        <h1> Salut Mr.{{ patient.name }}</h1>

        {% if ordonnances is empty %}
            <p>No ordonnances found for this patient.</p>
        {% else %}
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Liste des Ordonnances </h3>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <thead class="bg-light">
                            <tr>
                                <th>ID</th>
                                <th>Date Prescription</th>
                                <th>Description</th>
                                <th>Medicaments</th>
                                <th>Doctor</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for ordonnance in ordonnances %}
                                <tr>
                                    <td>{{ ordonnance.id }}</td>
                                    <td>{{ ordonnance.datePrescription|date('Y-m-d H:i') }}</td>
                                    <td>{{ ordonnance.description }}</td>
                                    <td>
                                        {% for medicament in ordonnance.medicaments %}
                                            {{ medicament.name }}{% if not loop.last %}, {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>{{ ordonnance.doctor.name }}</td>
                                    <td>
                                        <a href="{{ path('app_ordonnance_show', {'id': ordonnance.id}) }}" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> Details
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
