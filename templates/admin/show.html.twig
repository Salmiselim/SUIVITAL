{% extends 'base.html.twig' %}

{% block title %}Détails de la Réponse{% endblock %}

{% block content %}
<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-4">
                <div class="col-sm-6">
                    <h1><i class="fas fa-comment"></i> Détails de la Réponse</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="content mt-4">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title"><i class="fas fa-info-circle"></i> Informations de la Réponse</h3>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="bg-light">ID</th>
                                <td>{{ reponse.id }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Utilisateur</th>
                                <td>{{ reponse.userId }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Date</th>
                                <td>{{ reponse.date ? reponse.date|date('Y-m-d H:i:s') : 'Non définie' }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Objet</th>
                                <td>{{ reponse.objet }}</td>
                            </tr>
                            <tr>
                                <th class="bg-light">Commentaire</th>
                                <td>{{ reponse.commentaire }}</td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="2">
                                    <div class="d-flex justify-content-between px-3">
                                        <a href="{{ path('app_admin_reponses_edit', {'id': reponse.id}) }}" class="btn btn-warning">
                                            <i class="fas fa-edit"></i> Modifier
                                        </a>
                                        {{ include('admin/_delete_form.html.twig', {'class': 'btn btn-danger'}) }}
                                    </div>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
            <div class="text-right mt-5">
                <a href="{{ path('app_admin_reponses_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>
        </div>
    </section>
</div>
{% endblock %}
