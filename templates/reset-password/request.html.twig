{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block content %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 border-0" style="max-width: 500px; width: 100%; border-radius: 12px;">
        <div class="card-body">
            <h1 class="h4 text-success font-weight-bold text-center mb-3">Réinitialiser votre mot de passe</h1>

            <form method="post">
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_label(form.email, 'Votre adresse email', {'label_attr': {'class': 'font-weight-bold text-success'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control rounded-pill shadow-sm', 'placeholder': 'exemple@exemple.com'}}) }}
                </div>

                <div class="form-group">
                    <button class="btn btn-success btn-lg btn-block rounded-pill shadow-sm" type="submit" 
                        style="background: linear-gradient(135deg, #28a745, #218838); border: none; color: white; padding: 12px; font-size: 16px; font-weight: bold; transition: 0.3s ease;">
                        Envoyer le lien de réinitialisation
                    </button>
                </div>

                {{ form_end(form) }}
            </form>

            <div class="text-center mt-4">
                <p class="text-muted">Retour à la <a href="{{ path('app_login') }}" class="text-success font-weight-bold">connexion</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
