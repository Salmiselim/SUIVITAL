{% extends 'base.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block content %}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Reclamation Details</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th class="text-uppercase text-secondary font-weight-bold">ID</th>
                                    <td>{{ reclamation.id }}</td>
                                </tr>
                                <tr>
                                    <th class="text-uppercase text-secondary font-weight-bold">User ID</th>
                                    <td>{{ reclamation.userId }}</td>
                                </tr>
                                <tr>
                                    <th class="text-uppercase text-secondary font-weight-bold">Date</th>
                                    <td>{{ reclamation.date ? reclamation.date|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th class="text-uppercase text-secondary font-weight-bold">Objet</th>
                                    <td>{{ reclamation.objet }}</td>
                                </tr>
                                <tr>
                                    <th class="text-uppercase text-secondary font-weight-bold">Commentaire</th>
                                    <td>{{ reclamation.commentaire }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="{{ path('app_admin_reclamations_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <a href="{{ path('app_admin_reclamations_edit', {'id': reclamation.id}) }}" class="btn btn-primary">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        {{ include('admin/R_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
