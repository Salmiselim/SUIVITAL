{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block content %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Bienvenue sur le tableau de bord administrateur</h1>

        <div class="row justify-content-between">
            <div class="col-md-3 mb-4">
                <div class="small-box bg-info p-4">
                    <div class="inner">
                        <h3>{{ med|default(0) }}</h3>
                        <p>Nombre des médicaments</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-pills"></i>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="small-box bg-gradient-success p-4">
                    <div class="inner">
                        <h3>{{ (doctorCount + patientCount)|default(0) }}</h3>
                        <p>Nombre des utilisateurs</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="small-box bg-gradient-warning p-4">
                    <div class="inner">
                        <h3>{{ ord|default(0) }}</h3>
                        <p>Nombre des ordonnances</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-file-medical"></i>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="small-box bg-gradient-danger p-4">
                    <div class="inner">
                        <h3>{{ rdv|default(0) }}</h3>
                        <p>Total des rendez-vous</p>
                    </div>
                    <div class="icon">
                        <i class="fas fa-calendar-check"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Better & Smaller Statistics Chart -->
        <div class="row">
            <div class="col-md-4 offset-md-4 text-center">
                <h5>Répartition des Utilisateurs</h5>
                <canvas id="userChart" style="max-height: 450px;"></canvas>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        new Chart(document.getElementById('userChart'), {
            type: 'doughnut', 
            data: {
                labels: ['Doctors', 'Patients'],
                datasets: [{
                    data: [{{ doctorCount|default(0) }}, {{ patientCount|default(0) }}],
                    backgroundColor: ['#36A2EB', '#FF6384'],
                    hoverOffset: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '65%', 
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
{% block body %}
<div class="container-fluid d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 border-0 w-100" style="max-width: 1200px; height: 90%; border-radius: 12px;">
        <div class="card-body">
            <h1 class="h4 text-success font-weight-bold text-center mb-4">Admin Dashboard</h1>

            {# Search Form #}
            <form method="get" action="{{ path('app_admin_dashboard') }}" class="d-flex justify-content-center mb-4">
                <div class="input-group w-75">
                    <input type="text" name="search" class="form-control rounded-pill" placeholder="Search users..." value="{{ app.request.query.get('search') }}">
                    <button type="submit" class="btn btn-primary rounded-pill">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </form>

            {# Users Table #}
            <div class="table-responsive" style="max-height: 70vh; overflow-y: auto;">
                <table class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Verified</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.nom }} {{ user.prenom }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.roles|join(', ') }}</td>
                                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                                <td>
                                    {% if 'ROLE_DOCTOR' in user.roles and not user.isVerified %}
                                        <a href="{{ path('app_admin_verify', {'id': user.id}) }}" class="btn btn-warning btn-sm rounded-pill">Verify</a>
                                    {% endif %}
                                    <a href="{{ path('app_admin_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm rounded-pill">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
