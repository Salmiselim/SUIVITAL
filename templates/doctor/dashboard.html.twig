{% extends 'base.html.twig' %}

{% block title %}Doctor Dashboard{% endblock %}

{% block content %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 border-0" style="max-width: 900px; width: 100%; border-radius: 12px;">
        <div class="card-body">
            <h1 class="h4 text-success font-weight-bold text-center mb-4">Welcome, Dr. {{ user.nom }} {{ user.prenom }}!</h1>
            
            {% if not user.isVerified %}
                <div class="alert alert-warning text-center">
                    Your account is not yet verified. Please wait for admin approval.
                </div>
            {% endif %}
            
            <p class="text-center">This is your doctor dashboard.</p>

            <div class="text-center mt-4">
                <p>In this dashboard, you'll be able to:</p>
                <ul class="list-unstyled">
                    <li><strong>Manage your patient appointments</strong></li>
                    <li><strong>Update your medical profile</strong></li>
                    <li><strong>View patient history</strong></li>
                </ul>
                <p class="text-muted">Keep track of your patients and provide the best care possible!</p>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <a href="#" class="btn btn-success btn-lg btn-block rounded-pill shadow-sm mx-2">My Appointments</a>
                <a href="#" class="btn btn-primary btn-lg btn-block rounded-pill shadow-sm mx-2">Patient History</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
