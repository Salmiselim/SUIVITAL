{% extends 'base.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <div class="container mt-4">
    <h1 class="mb-4">Liste des r√©clamations</h1>

    <table class="table table-striped table-bordered table-hover custom-table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>UserId</th>
                <th>Date</th>
                <th>Objet</th>
                <th>Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.userId }}</td>
                <td>{{ reclamation.date ? reclamation.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ reclamation.objet }}</td>
                <td>{{ reclamation.commentaire }}</td>
                <td>
                    <a class="btn btn-info btn-sm" href="{{ path('app_reclamations_show', {'id': reclamation.id}) }}">show</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('app_reclamations_edit', {'id': reclamation.id}) }}">edit</a>
                    <!-- <a class="btn btn-danger btn-sm" href="{{ path('app_admin_reponses_new', {'id': reclamation.id}) }}">repondre</a> -->
                </td>
            </tr>
        {% else %}
            <tr>
                <td class="text-center" colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reclamations_new') }}" class="btn btn-primary">Create new</a>
    
    </div>
{% endblock %}
