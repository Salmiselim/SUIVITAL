{% extends 'base.html.twig' %}

{% block title %}Create Ordonnance{% endblock %}

{% block content %}  {# Change from "body" to "content" #}
    <div class="container">
        <h1 class="mb-4">Create Ordonnance</h1>

        <div class="card p-4 shadow-sm">
            {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}
           
                <div class="form-group">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.description) }}
                </div>
<div class="form-group">
    {{ form_label(form.medicaments, 'Medications') }}
    <div class="scrollable-checkbox-container">
        {% for choice in form.medicaments %}
            <div>
                {{ form_widget(choice) }}
                <label for="{{ choice.vars.id }}">{{ choice.vars.label }}</label>
            </div>
        {% endfor %}
    </div>
    {{ form_errors(form.medicaments) }}
</div>
    



                <div class="form-group">
                    {{ form_label(form.patient, 'Patient') }}
                    {{ form_widget(form.patient, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.patient) }}
                </div>
      
                <div class="form-group">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary mt-3'}}) }}
                </div>  
            {{ form_end(form) }}
        </div>

        <a href="{{ path('app_ordonnance_index') }}" class="btn btn-link mt-3">Back to list</a>
    </div>
{% endblock %}
