{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block body %}
<div class="container-fluid d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 border-0 w-100" style="max-width: 1200px; height: 90%; border-radius: 12px;">
        <div class="card-body">
            <h1 class="h4 text-success font-weight-bold text-center mb-4">Admin Dashboard</h1>

            {# Search Form #}
            <form method="get" action="{{ path('app_admin_dashboard') }}" class="d-flex justify-content-center mb-4">
                <div class="input-group w-75">
                    <input type="text" name="search" class="form-control rounded-pill" placeholder="Search users..." value="{{ app.request.query.get('search') }}">
                    <button type="submit" class="btn btn-primary rounded-pill">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </form>

            {# Users Table #}
            <div class="table-responsive" style="max-height: 70vh; overflow-y: auto;">
                <table class="table table-striped table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Verified</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.nom }} {{ user.prenom }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.roles|join(', ') }}</td>
                                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                                <td>
                                    {% if 'ROLE_DOCTOR' in user.roles and not user.isVerified %}
                                        <a href="{{ path('app_admin_verify', {'id': user.id}) }}" class="btn btn-warning btn-sm rounded-pill">Verify</a>
                                    {% endif %}
                                    <a href="{{ path('app_admin_delete', {'id': user.id}) }}" class="btn btn-danger btn-sm rounded-pill">Delete</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
