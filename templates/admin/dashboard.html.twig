{% extends 'base.html.twig' %} {% block title %}Admin Dashboard{% endblock %} {%
block content %}
<div class="container-fluid px-4">
  <h1 class="mt-4 text-primary fw-bold">Tableau de Bord Administrateur</h1>
  <div class="row my-4 g-4">
    <!-- Stats Cards -->
    <div class="col-12 col-sm-6 col-xl-3">
      <div
        class="card shadow-lg bg-info bg-gradient border-0 hover-shadow-lg transition hover-elevate">
        <div class="card-body d-flex align-items-center">
          <div class="flex-grow-1">
            <h3 class="card-title text-white">{{ med|default(0) }}</h3>
            <p class="card-text text-white-50 mb-0">Médicaments</p>
          </div>
          <i class="fas fa-pills fa-3x text-white-50 ms-3"></i>
        </div>
        <a
          href="{{ path('medication_search') }}"
          class="card-footer bg-white text-info d-flex justify-content-between align-items-center">
          <span>Gérer les médicaments</span>
          <i class="fas fa-chevron-right"></i>
        </a>
      </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
      <div
        class="card shadow-lg bg-success bg-gradient border-0 hover-shadow-lg transition hover-elevate">
        <div class="card-body d-flex align-items-center">
          <div class="flex-grow-1">
            <h3 class="card-title text-white">
              {{ (doctorCount + patientCount)|default(0) }}
            </h3>
            <p class="card-text text-white-50 mb-0">Utilisateurs</p>
          </div>
          <i class="fas fa-users fa-3x text-white-50 ms-3"></i>
        </div>
      </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
      <div
        class="card shadow-lg bg-warning bg-gradient border-0 hover-shadow-lg transition hover-elevate">
        <div class="card-body d-flex align-items-center">
          <div class="flex-grow-1">
            <h3 class="card-title text-white">{{ ord|default(0) }}</h3>
            <p class="card-text text-white-50 mb-0">Ordonnances</p>
          </div>
          <i class="fas fa-file-medical fa-3x text-white-50 ms-3"></i>
        </div>
      </div>
    </div>

    <div class="col-12 col-sm-6 col-xl-3">
      <div
        class="card shadow-lg bg-danger bg-gradient border-0 hover-shadow-lg transition hover-elevate">
        <div class="card-body d-flex align-items-center">
          <div class="flex-grow-1">
            <h3 class="card-title text-white">{{ rdv|default(0) }}</h3>
            <p class="card-text text-white-50 mb-0">Rendez-vous</p>
          </div>
          <i class="fas fa-calendar-check fa-3x text-white-50 ms-3"></i>
        </div>
        <a
          href="{{ path('app_rendezvous_index') }}"
          class="card-footer bg-white text-danger d-flex justify-content-between align-items-center">
          <span>Voir les RDV</span>
          <i class="fas fa-chevron-right"></i>
        </a>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="col-12 col-xl-8">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-0">
          <h5 class="mb-0 text-secondary">Statistiques des Utilisateurs</h5>
        </div>
        <div class="card-body">
          <div class="chart-container" style="height: 300px">
            <canvas id="userChart"></canvas>
          </div>
        </div>
      </div>
    </div>

    <!-- Quick Stats -->
    <div class="col-12 col-xl-4">
      <div class="card shadow-sm border-0">
        <div
          class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
          <h5 class="mb-0 text-secondary">Détails Utilisateurs</h5>
          <i class="fas fa-chart-pie text-primary"></i>
        </div>
        <div class="card-body">
          <div class="list-group list-group-flush">
            <div
              class="list-group-item d-flex justify-content-between align-items-center">
              <span>Médecins</span>
              <span
                class="badge bg-primary rounded-pill"
                >{{ doctorCount|default(0) }}</span
              >
            </div>
            <div
              class="list-group-item d-flex justify-content-between align-items-center">
              <span>Patients</span>
              <span
                class="badge bg-success rounded-pill"
                >{{ patientCount|default(0) }}</span
              >
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="col-12">
      <div class="card shadow-sm border-0">
        <div
          class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
          <h5 class="mb-0 text-secondary">Activités Récentes</h5>
          <a href="#" class="btn btn-sm btn-outline-primary">Voir tout</a>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
              <thead class="bg-light">
                <tr>
                  <th>Action</th>
                  <th>Utilisateur</th>
                  <th>Date</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Cération d'ordonnance</td>
                  <td>Dr. John Doe</td>
                  <td>02/03/2025</td>
                  <td><span class="badge bg-success">Complété</span></td>
                </tr>
                <tr>
                  <td>Nouveau médicament</td>
                  <td>Admin</td>
                  <td>01/03/2025</td>
                  <td><span class="badge bg-info">Enregistré</span></td>
                </tr>
                <tr>
                  <td>Rendez-vous</td>
                  <td>Patient 1</td>
                  <td>28/02/2025</td>
                  <td><span class="badge bg-warning">En attente</span></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  new Chart(document.getElementById('userChart'), {
    type: 'doughnut',
    data: {
      labels: ['Médecins', 'Patients'],
      datasets: [{
        data: [{{ doctorCount|default(0) }}, {{ patientCount|default(0) }}],
        backgroundColor: ['#4e73df', '#1cc88a'],
        hoverBackgroundColor: ['#2e59d9', '#17a673'],
        borderWidth: 5
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        legend: {
          position: 'right',
          labels: {
            boxWidth: 15,
            padding: 20
          }
        },
        tooltip: {
          backgroundColor: '#fff',
          titleColor: '#000',
          bodyColor: '#000',
          borderColor: '#ddd',
          borderWidth: 1
        }
      },
      cutout: '70%'
    }
  });
</script>

<style>
  .hover-shadow-lg {
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .hover-shadow-lg:hover {
    transform: translateY(-5px);
    box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
  }
  .table-hover tbody tr:hover {
    background-color: rgba(0, 0, 0, 0.03);
  }
</style>

{% endblock %}
