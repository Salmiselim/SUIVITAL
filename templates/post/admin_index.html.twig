{% extends 'admin_base.html.twig' %}

{% block title %}Admin - Posts{% endblock %}

{% block body %}
    <div class="container" style="margin-top: 30px;">
        <h1 class="text-center mb-4">Admin - Manage Posts</h1>

        {# Formulaire de recherche #}
        <div class="text-center mb-4">
            <form action="{{ path('post_search') }}" method="get" style="display: inline-block;">
                <input type="text" name="q" placeholder="Rechercher un post..." value="{{ app.request.query.get('q') }}" style="padding: 8px; font-size: 14px; border: 1px solid #ddd; border-radius: 5px;">
                <button type="submit" style="padding: 8px 16px; font-size: 14px; background-color: #007bff; color: white; border: none; border-radius: 5px; cursor: pointer;">Rechercher</button>
            </form>
        </div>

        {# Bouton "Add New Post" #}
        <div class="text-center mb-3">
            <a href="{{ path('app_post_new') }}" class="btn btn-success">Add New Post</a>
        </div>

        {# Liste des posts avec pagination #}
        <div class="row">
            {% if posts is empty %}
                <p class="text-center">No posts available.</p>
            {% else %}
                {% for post in posts %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ post.title }}</h5>
                                <p class="card-text">{{ post.content|slice(0, 100) }}...</p>
                                <small class="text-muted">Posted on {{ post.createdAt|date('Y-m-d') }}</small>
                                <div class="mt-3">
                                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                                    <a href="{{ path('app_post_delete', {'id': post.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this post?');">Delete</a>
                                </div>
                                <div class="mt-3">
                                    <h6>Comments:</h6>
                                    {% if commentsByPost[post.id] is empty %}
                                        <p>No comments yet.</p>
                                    {% else %}
                                        <ul class="list-unstyled">
                                            {% for comment in commentsByPost[post.id]|slice(0, 2) %}
                                                <li class="mb-2">
                                                    <strong>{{ comment.author }}:</strong> {{ comment.content|slice(0, 50) }}...
                                                    <small class="text-muted">{{ comment.createdAt|date('Y-m-d') }}</small>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                        {% if commentsByPost[post.id]|length > 2 %}
                                            <button class="btn btn-link btn-sm" onclick="toggleComments({{ post.id }})">See more...</button>
                                            <ul id="comments-{{ post.id }}" class="list-unstyled" style="display: none;">
                                                {% for comment in commentsByPost[post.id]|slice(2) %}
                                                    <li class="mb-2">
                                                        <strong>{{ comment.author }}:</strong> {{ comment.content|slice(0, 50) }}...
                                                        <small class="text-muted">{{ comment.createdAt|date('Y-m-d') }}</small>
                                                    </li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>

        {# Pagination #}
        <div class="text-center mt-4">
            {% if currentPage > 1 %}
                <a href="{{ path('app_post_admin', {'page': currentPage - 1}) }}" class="btn btn-secondary">Previous</a>
            {% endif %}

            {% if currentPage < totalPages %}
                <a href="{{ path('app_post_admin', {'page': currentPage + 1}) }}" class="btn btn-secondary">Next</a>
            {% endif %}
        </div>
    </div>

    {# Script JavaScript pour afficher/masquer les commentaires suppl√©mentaires #}
    <script>
        function toggleComments(postId) {
            const comments = document.getElementById('comments-' + postId);
            if (comments.style.display === 'none') {
                comments.style.display = 'block';
            } else {
                comments.style.display = 'none';
            }
        }
    </script>
{% endblock %}
